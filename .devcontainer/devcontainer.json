{
  "name": "FastAPI Tutorial",
  "build": {
    "dockerfile": "Dockerfile",
    "context": ".."
  },

  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {},
    "ghcr.io/prulloac/devcontainer-features/bun:1": {},
    "ghcr.io/devcontainers/features/node:1": {},
    "ghcr.io/devcontainers/features/python:1": {},
    "ghcr.io/devcontainers-extra/features/typescript:2": {}
  },

  "customizations": {
    "vscode": {
      "settings": {
        // We include the settings we discussed here so they are 
        // automatically applied when the container is created
        "python.defaultInterpreterPath": "/usr/local/bin/python",
        "editor.formatOnSave": true,
        "[python]": {
          "editor.defaultFormatter": "charliermarsh.ruff",
          "editor.codeActionsOnSave": {
            "source.fixAll.ruff": "explicit",
            "source.organizeImports.ruff": "explicit"
          }
        },
        "python.analysis.typeCheckingMode": "basic"
      },
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
				"ms-python.debugpy", // ðŸ‘ˆ Make sure this is in your extensions list!
        "charliermarsh.ruff", // The only Python formatter/linter you need now
        "tamasfe.even-better-toml",
        "oderwat.indent-rainbow",
        "esbenp.prettier-vscode",
        "dbaeumer.vscode-eslint"
      ]
    }
  },

  "forwardPorts": [8000],

	// ðŸ‘‡ This tells VS Code to open the browser automatically
  "portsAttributes": {
    "8000": {
      "label": "FastAPI Server",
      "onAutoForward": "openBrowser"
    }
  },

  "remoteUser": "root"
}